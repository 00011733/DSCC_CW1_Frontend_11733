@model IEnumerable<DSCC_CW1_Frontend_11733.Models.Topic>

@{
    ViewData["Title"] = "Index";
}

<h1>Topics</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.ActionLink(item.Name, "Articles", new {id = item.Id})
            </td>
            <td>
               @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                <form asp-action="Delete" asp-controller="Topic" asp-route-id="@item.Id" method="post" class="d-inline">
                    <button type="submit" class="btn text-primary" onclick="return confirm('Are you sure you want to delete this post?');">Delete</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
